  <body>
    <div class="wrapper">

           <% if session[:user_id] %>
            <a href="/users/me">Click to view your profile</a><br>
            <a href="/goals/mygoals">Click to view your goals</a><br>
            <a href="/dates/mydates">Click to view your dates</a><br>
            <a href="/reportcards/new">Click generate report card</a><br>
          <% end %>
 
        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>ReportCard</strong></small><br>
        <% if session[:user_id] %>
            <br>
            <form action="/logout" method="get">
              <button type="submit">Log out</button>
            </form>
            <% end %>        
      </footer>
    </div>

